{
  "name": "madnessenjin",
  "version": "2.0.0",
  "description": "app development assistant",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "npm run build:watch",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MadnessLabs/MadnessEnjinCLI.git"
  },
  "author": "Madness Labs",
  "license": "MIT",
  "preferGlobal": true,
  "bin": {
    "enjin": "dist/index.js",
    "njn": "dist/index.js"
  },
  "dependencies": {
    "fs-extra": "^6.0.1",
    "lodash": "^4.17.10",
    "rimraf": "^2.6.2",
    "yargs": "^11.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.0",
    "jest": "^23.1.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  }
}
